# ============================================
# TRADING AI - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# -------------------- Database Configuration --------------------
DB_URL=jdbc:postgresql://localhost:5432/trading_ai
DB_USERNAME=trading_ai_user
DB_PASSWORD=your_secure_password_here

# -------------------- Groq AI Configuration (FREE - Recommended) --------------------
# Get your free API key at: https://console.groq.com
# Groq provides fast, free inference for open-source LLMs
GROQ_ENABLED=true
GROQ_API_KEY=gsk_your-groq-api-key-here
# Optional: Override default model (default: llama-3.3-70b-versatile)
# GROQ_MODEL=llama-3.3-70b-versatile
# GROQ_TEMPERATURE=0.3

# -------------------- OpenAI Configuration (PAID - Fallback) --------------------
# Only used if GROQ_ENABLED=false
# Get API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# Optional: Override default model (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE=0.3

# -------------------- Server Configuration --------------------
SERVER_PORT=8080

# -------------------- CORS Configuration --------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# -------------------- Application Profile --------------------
# Options: local, dev, prod
SPRING_PROFILES_ACTIVE=local
